{
  "name": "gateway",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "build": "npx babel src -d build --extensions '.ts'",
    "start": "node ./build/server.js",
    "start:dev": "babel-node src/server.ts -x .ts",
    "start:watch": "nodemon --exec 'babel-node src/server.ts -x .ts' -e ts",
    "lint": "eslint \"src/**/*.{js,ts}\"",
    "format": "prettier --write \"src/**/*.{ts,json}\"",
    "lint:types": "tsc",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:ci": "jest --reporters ./node_modules/jest-junit",
    "test:int": "jest --testMatch '**/?(*.)+(test).ts?(x)' --runInBand --forceExit --detectOpenHandles",
    "test:int:watch": "jest --testMatch '**/?(*.)+(test).ts?(x)' --runInBand --watch",
    "cleanup": "rimraf build junit.xml"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@babel/cli": "^7.4.3",
    "@babel/core": "^7.4.3",
    "@babel/node": "^7.2.2",
    "@babel/parser": "^7.4.3",
    "@babel/plugin-proposal-class-properties": "^7.4.0",
    "@babel/plugin-proposal-json-strings": "^7.2.0",
    "@babel/plugin-proposal-numeric-separator": "^7.2.0",
    "@babel/plugin-proposal-object-rest-spread": "^7.4.3",
    "@babel/plugin-proposal-optional-chaining": "^7.2.0",
    "@babel/plugin-proposal-throw-expressions": "^7.2.0",
    "@babel/plugin-transform-flow-strip-types": "^7.4.0",
    "@babel/plugin-transform-regenerator": "^7.4.3",
    "@babel/preset-env": "^7.4.3",
    "@babel/preset-typescript": "^7.3.3",
    "@types/express": "^4.16.1",
    "@types/jest": "^24.0.11",
    "@types/mongoose": "^5.3.26",
    "@types/supertest": "^2.0.7",
    "@typescript-eslint/eslint-plugin": "^2.7.0",
    "@typescript-eslint/parser": "^2.7.0",
    "eslint": "^6.6.0",
    "eslint-config-airbnb-base": "^14.0.0",
    "eslint-config-prettier": "^6.5.0",
    "eslint-import-resolver-alias": "^1.1.2",
    "eslint-plugin-import": "^2.17.2",
    "eslint-plugin-jest": "^23.0.4",
    "expect-more-jest": "^3.0.0",
    "jest": "^24.7.1",
    "jest-junit": "^9.0.0",
    "jest-matcher-utils": "^24.7.0",
    "jest-watch-typeahead": "^0.4.2",
    "nodemon": "^1.19.4",
    "prettier": "^1.19.1",
    "rimraf": "^3.0.0",
    "typescript": "^3.7.2"
  },
  "dependencies": {
    "@typescript-eslint/eslint-plugin": "^2.7.0",
    "apollo-server": "2.9.9",
    "apollo-server-express": "2.9.9",
    "body-parser": "^1.19.0",
    "cors": "2.8.5",
    "dataloader": "1.4.0",
    "express": "^4.17.1",
    "express-asyncify": "1.0.0",
    "express-jwt": "5.3.1",
    "graphql": "14.5.8",
    "graphql-type-json": "0.3.0"
  },
  "jest": {
    "verbose": false,
    "setupFilesAfterEnv": [
      "<rootDir>/test/jest.setup.js"
    ],
    "testEnvironment": "node",
    "moduleFileExtensions": [
      "ts",
      "js",
      "json"
    ],
    "transform": {
      "^.+\\.(js|jsx|ts|tsx)$": "babel-jest"
    },
    "testMatch": [
      "**/__tests__/**/?(*.)+(spec).(js|ts)?(x)",
      "**/?(*.)+(spec).(js|ts)?(x)"
    ],
    "watchPlugins": [
      "jest-watch-typeahead/filename",
      "jest-watch-typeahead/testname"
    ]
  }
}
